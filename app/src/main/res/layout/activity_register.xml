<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_1080x1920"
        android:alpha="0.7" /> <!-- Ajusta la opacidad -->

    <!-- Otros elementos encima del fondo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea tu Cuenta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginBottom="32dp"/>

        <!--Campo de Correo -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="E-Mail"
            android:inputType="text"
            android:padding="12dp"
            android:textColorHint="#90703E" />

        <!--Campo de usuario -->
        <EditText
            android:id="@+id/etUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Usuario"
            android:inputType="text"
            android:padding="12dp"
            android:textColorHint="#90703E" />

        <!-- Campo de contrase침a -->
        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#815D2A" />

        <!-- Bot칩n de inicio de sesi칩n -->
        <Button
            android:id="@+id/btnCrearCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:backgroundTint="#07362B"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</RelativeLayout>